			<text name="ListItemText"> <!-- SPECIAL attribute name -->
				<x> 15 </x>
				<y>
					<copy src="me" trait="font" />
					<copy src="globals" trait="_VUI+FontY_"/>
					<add>
						<copy src="parent" trait="_VerticalSpacing" />
