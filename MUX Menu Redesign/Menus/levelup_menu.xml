				<locus>1</locus>
				<id> 9 </id>
				<visible> 0 </visible>
				<zoom> &scale; </zoom>
				<x> <copy src="sibling(LUM_SelectionInfoRect)" trait="x" /> </x>
				<y> <copy src="sibling(LUM_SelectionInfoRect)" trait="y" /> <sub src="me" trait="height" /> <sub> 14 </sub> </y>
