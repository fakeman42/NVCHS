						<copy src="parent" trait="width"/>
						<sub src="me" trait="x"/>
					</_length>
					<x>
						<copy src="sibling(LUM_Headline_Title)" trait="x"/>
						<add src="sibling(LUM_Headline_Title)" trait="width"/>
