			<image name="LUM_SelectionIcon">
				<locus>1</locus>
				<id> 3 </id>
				<x> 530 </x>
				<y> 0 </y>
				<width> 400 </width>
				<height> 400 </height>
				<zoom> &scale; </zoom>
				<visible> 0 </visible>
				<include src="VUI+\Image_outline.xml"/>
			</image>

